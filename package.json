{
  "name": "coinlaunch",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "dev:api": "turbo dev --filter @coinlaunch/api",
    "dev:twitter": "turbo dev --filter @coinlaunch/twitter",
    "dev:all": "node scripts/start-dev.js",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "lint": "turbo lint",
    "type-check": "turbo type-check",
    "test": "turbo test",
    "test:twitter": "cd apps/twitter && npm test"
  },
  "devDependencies": {
    "@coinlaunch/eslint-config": "workspace:*",
    "@coinlaunch/typescript-config": "workspace:*",
    "@types/node": "^22.10.2",
    "prettier": "^3.3.3",
    "turbo": "^2.3.3",
    "typescript": "^5.7.2"
  },
  "packageManager": "pnpm@9.15.2",
  "engines": {
    "node": ">=18"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
