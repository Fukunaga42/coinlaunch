# Twitter Service Configuration
TWITTER_SERVICE_PORT=5051

# Database (shared with main API)
MONGO_URI=mongodb://localhost:27017/coinlaunch
MONGO_DB_NAME=coinlaunch

# Twitter API Configuration
# For listening to mentions (Bearer Token - Read Only)
X_APP_BEARER_TOKEN=your_twitter_app_bearer_token_here

# For OAuth2 (Required for posting replies)
X_CLIENT_ID=your_twitter_oauth2_client_id
X_CLIENT_SECRET=your_twitter_oauth2_client_secret
X_OAUTH_2_REDIRECT_URL=http://localhost:5051/auth/twitter/callback
USER_X_ID=your_twitter_user_id_numbers

# Ethereum Configuration
ETH_RPC_URL=https://mainnet.infura.io/v3/your_infura_key_here
BONDING_CURVE_MANAGER_ADDRESS=0x_your_bonding_curve_manager_address

# Escrow Wallet Configuration
ESCROW_ENCRYPTION_KEY=your_32_byte_hex_encryption_key_here
FUNDING_PRIVATE_KEY=0x_private_key_of_funding_wallet

# Service Configuration
ENABLE_TWITTER_LISTENER=false
ENABLE_DB_LISTENER=true
DB_POLLING_INTERVAL=5000

# Privy Configuration (shared with main API)
PRIVY_APP_ID=your_privy_app_id
PRIVY_APP_SECRET=your_privy_app_secret 